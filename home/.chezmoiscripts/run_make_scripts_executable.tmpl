#!/usr/bin/env bash

dirs=(
    "$HOME/.config/tmux/scripts"
)

for dir in "${dirs[@]}"; do
    if [ ! -d "$dir" ]; then
        continue
    fi

    # Find all .sh files in the directory (non-recursive)
    while IFS= read -r -d '' file; do
        if [ ! -x "$file" ]; then
            chmod +x "$file"
        fi
    done < <(find "$dir" -maxdepth 1 -name "*.sh" -type f -print0)
done
